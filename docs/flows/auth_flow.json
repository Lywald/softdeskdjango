{
  "info": {
    "name": "SoftDesk Auth Flow",
    "description": "Authentication flow: Get JWT token and test protected endpoints",
    "schema": "https://schema.postman.io/collection/draft-07/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Get JWT Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"PierreAdmin\",\n  \"password\": \"Theboss0\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/token/",
          "host": ["{{base_url}}"],
          "path": ["api", "token", ""]
        }
      }
    },
    {
      "name": "2. List Projects (Authenticated)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/projects/",
          "host": ["{{base_url}}"],
          "path": ["api", "projects", ""]
        }
      }
    },
    {
      "name": "3. List Projects (No Auth - Expect 401)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/projects/",
          "host": ["{{base_url}}"],
          "path": ["api", "projects", ""]
        }
      }
    },
    {
      "name": "4. Refresh Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refresh\": \"{{refresh_token}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/token/refresh/",
          "host": ["{{base_url}}"],
          "path": ["api", "token", "refresh", ""]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000"
    },
